<heml>
  <%- include('partial/header.heml') %>
  <body>
    <div class="container-fluid">
      <%- include('partial/email-title.heml') %>

      <div class="email-body">
        <div class="body-header">
          <p class="welcome-user text-center">Hi <b>Ankur,</b></p>
          <h1 class="text-center">SORRY, WE FOUND SOME ERRORS</h1>
          <div class="blue-background"><img class="alarm-icon" src="https://storage.googleapis.com/site-granny/images/search-problem.png"/></div>
        </div>

        <div class="email-message email-style">
          <p class="grey-font">
            We have been monitoring your website 24/7. Following are the crawler error report:-
          </p>
          <p class="grey-font">
            Site: SOMETHING.COM
          </p>
          <table class="error-table">
            <tr>
              <td class='table-cell'>
                Link
              </td>
              <td class='table-cell'>
                Error Message
              </td>
            </tr>
            <tr>
              <td class='table-cell'>
                {{$value.LinkUrl}}
              </td>
              <td class='table-cell'>
                {{ $value.LinkErrorMsg }}
              </td>
            </tr>
          </table>
          <p class="grey-font">
            Total Errors: {{.Body.TotalErrors}}
          </p>
        </div>
        <button><span class="setup-btn"><b>MORE DETAILS</b></span></button>
      </div>

      <%- include('partial/email-footer.heml') %>
    </div>
  </body>
</heml>
